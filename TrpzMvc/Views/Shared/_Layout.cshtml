<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Лабораторная3</title>
    @Styles.Render("~/Vendor/css")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="content">
        <header class="header">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <a class="navbar-brand" href="/">
                        <p class="logo-text"><img class="logo" src="~/Content/img/logo.png">Globe</p>
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item"><a class="nav-link" @Html.ActionLink("Contacts", "Contacts","Home")></a></li>
                            <li class="nav-item"><a class="nav-link" @Html.ActionLink("Info", "Info","Home")></a></li>
                        </ul>
                    </div>
                </nav>
            </div>
        </header>
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container-fluid">
            <div class="row no-gutters justify-content-center">
                <div class="col-auto">
                    <p class="footer-text">98-765-43-21</p>
                </div>
                <div class="col-auto">
                    <img class="logo-footer" src="~/Content/img/logo-footer.png">
                </div>
                <div class="col-auto">
                    <p class="footer-text">Cilpo 25a street</p>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/Vendor/js")
    @Scripts.Render("~/Content/js")
</body>
</html>